{
  "name": "etherworld",
  "version": "1.0.0",
  "description": "like Etherpad but for VR",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinGrandon/vrpad.git"
  },
  "author": "mozvr <mozvr@mozilla.com>",
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/KevinGrandon/mozvr/issues"
  },
  "homepage": "https://github.com/KevinGrandon/mozvr",
  "dependencies": {
    "autoprefixer": "^5.1.0",
    "browserify": "^9.0.3",
    "express": "^4.12.2",
    "extend": "1.1.3",
    "grapnel": "^0.5.8",
    "local-storage": "^1.4.1",
    "node-localstorage": "^0.5.0",
    "query-string": "^1.0.0",
    "morgan": "^1.5.2",
    "socket.io": "^1.3.5",
    "underscore": "^1.8.2",
    "voxel": "~0.5.0",
    "voxel-engine": "~0.20.1",
    "voxel-fly": "~0.1.2",
    "voxel-highlight": "0.0.10",
    "voxel-player": "~0.1.0",
    "voxel-walk": "0.0.5"
  },
  "devDependencies": {
    "nodemon": "^1.3.7",
    "onchange": "^1.0.0"
  },
  "scripts": {
    "start": "npm run build && NODE_ENVIRONMENT='production' node server",
    "prod": "npm start",
    "dev": "npm run build && NODE_ENVIRONMENT='development' nodemon server --watch lib/ --watch server.js & npm run watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "mkdir -p build/css && autoprefixer --browsers 'last 10 versions' --map --no-cascade src/css/app.css -o build/css/app.css",
    "build:js": "mkdir -p build/js && browserify src/js/app.js -o build/js/app.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "onchange src/{*,**/*}.css -- npm run build:css",
    "watch:js": "onchange {src,lib}/{*,**/*}.js -- npm run build:js"
  }
}
